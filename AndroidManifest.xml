<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.teamcodeflux.android.training.app"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-sdk android:minSdkVersion="16"
              android:targetSdkVersion="21"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <repository>
        <id>google-gms</id>
        <name>Google GMS</name>
        <url>file://${env.ANDROID_HOME}extras/google/m2repository</url>
    </repository>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyCavsZumyXZdNFlyO1mZBEzP9_8xq7KK2g"/>

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>
        <activity android:name="MainActivity_"
                  android:label="@string/app_name">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="GetStartedActivity_"
                  android:label="@string/search_activity"
                  android:parentActivityName="MainActivity_"/>
        <activity android:name="ShowResultsActivity_"
                  android:label="@string/results_activity"
                  android:parentActivityName="GetStartedActivity_"/>
    </application>
</manifest>
